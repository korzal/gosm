@using GOSM.Models
@model User
@{ Layout = "_Layout"; ViewBag.Title = "Register";}

<h2>Register a new account. </h2>
<form method="post" asp-controller="LoginView" asp-action="Register">
    <div class="form-group">
        <label for="Username">Username:</label>
        <input asp-for="Username" class="form-control" name="Username" />
        <span asp-validation-for="Username"></span>
    </div>
    <div class="form-group">
        <label for="Email">Email:</label>
        <input asp-for="Email" class="form-control" name="Email" />
        <span asp-validation-for="Email"></span>
    </div>
    <div class="form-group">
        <label for="Password">Password:</label>
        <input asp-for="Password" type="password" class="form-control" name="Password" />
        <span asp-validation-for="Password"></span>
    </div>

    <div class="text-center panel-body">
        <button type="submit" class="btn btn-sm btn-primary">Register</button>
    </div>
</form>

@if (ViewBag.Result == "BadReq")
{
    <br />
    <br />
    <div class="alert alert-danger" role="alert">
        Malformed syntax for user credentials, please try again.
    </div>
}
else if (ViewBag.Result == "Conflict")
{
    <br />
    <br />
    <div class="alert alert-warning" role="alert">
        User with the provided username already exists.
    </div>
}

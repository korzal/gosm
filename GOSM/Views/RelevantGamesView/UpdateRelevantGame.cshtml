@model RelevantGames
@{ Layout = "_Layout"; ViewBag.Title = "Update a Relevant game";}

<h2>Update a Relevant game </h2>
<form method="post">
    <div class="form-group">
        <label asp-for="ID"></label>
        <input class="form-control" asp-for="ID" readonly />
    </div>
    <div class="form-group">
        <label asp-for="Title"></label>
        <input class="form-control" asp-for="Title" />
    </div>
    <div class="form-group">
        <label asp-for="Genre"></label>
        
        <div class="input-group">
            <select class="form-control" asp-for="Genre">
                <option>@GameGenre.FPS</option>
                <option>@GameGenre.Fighting</option>
                <option>@GameGenre.MMORPG</option>
                <option>@GameGenre.MOBA</option>
                <option>@GameGenre.Rhythm</option>
                <option>@GameGenre.RPG</option>
                <option>@GameGenre.RTS</option>
                <option>@GameGenre.Sandbox</option>
                <option>@GameGenre.Other</option>
            </select>
        </div>
    </div>
    <div class="text-center panel-body">
        <button type="submit" class="btn btn-sm btn-primary">Update</button>
        <a asp-action="RelevantGamesList" class="btn btn-sm btn-secondary">Back</a>
    </div>
</form>

@if (ViewBag.Result == "Success")
{
    <h2>Relevant game</h2>
    <table class="table table-sm table-striped table-bordered m-2">
        <thead>
            <tr>
                <th>ID</th>
                <th>Title</th>
                <th>Genre</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.ID</td>
                <td>@Model.Title</td>
                <td>@Model.Genre</td>
            </tr>
        </tbody>
    </table>
}
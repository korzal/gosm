@using GOSM.Models
@model RelevantGames
@{ Layout = "_Layout"; ViewBag.Title = "Add a Relevant game";}

<h2>Add a Relevant game </h2>
<form asp-action="AddRelevantGame" method="post">
    <div class="form-group">
        <label for="Title">Title:</label>
        <input class="form-control" name="Title" />
    </div>
    <div class="form-group">
        <label for="Genre">Game Genre:</label>
        <div class="input-group">
            <select class="form-control" name="Genre">
                <option>@GameGenre.FPS</option>
                <option>@GameGenre.Fighting</option>
                <option>@GameGenre.MMORPG</option>
                <option>@GameGenre.MOBA</option>
                <option>@GameGenre.Rhythm</option>
                <option>@GameGenre.RPG</option>
                <option>@GameGenre.RTS</option>
                <option>@GameGenre.Sandbox</option>
                <option>@GameGenre.Other</option>
            </select>
        </div>
    </div>
    <div class="text-center panel-body">
        <button type="submit" class="btn btn-sm btn-primary">Add</button>
        <a asp-action="RelevantGamesList" class="btn btn-sm btn-secondary">Back</a>
    </div>
</form>

@if (Model != null)
{
<h2>Relevant game</h2>
    <table class="table table-sm table-striped table-bordered m-2">
        <thead>
            <tr>
                <th>ID</th>
                <th>Title</th>
                <th>Genre</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.ID</td>
                <td>@Model.Title</td>
                <td>@Model.Genre</td>
            </tr>
        </tbody>
    </table>
}
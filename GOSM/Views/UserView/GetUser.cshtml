@model User
@{ Layout = "_Layout"; ViewBag.Title = "Get User by ID";}

<h2>Get User by ID </h2>
<form method="post">
    <div class="form-group">
        <label for="id">ID:</label>
        <input class="form-control" name="id" />
    </div>
    <div class="text-center panel-body">
        <button type="submit" class="btn btn-sm btn-primary">Get User</button>
    </div>
</form>

@if (Model != null)
{
    <h2>Relevant game</h2>
    <table class="table table-sm table-striped table-bordered m-2">
        <thead>
            <tr>
                <th>ID</th>
                <th>Username</th>
                <th>Relevant games</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.ID</td>
                <td>@Model.Username</td>
                <td>
                    @foreach (var game in Model.UserRelevantGamesList)
                    {
                        if (game.UserID == Model.ID)
                        {
                            @game.RelevantGames.Title
                            <br />
                        }
                    }
               </td>
            </tr>
        </tbody>
    </table>
}